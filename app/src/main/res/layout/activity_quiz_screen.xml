<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8B9A9C"
    tools:context=".QuizScreen">
    <TextView
        android:id="@+id/questionText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="serif"/>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/questionText"
        android:layout_marginBottom="16dp">
    <RadioButton
        android:id="@+id/rd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/questionText"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="22dp"
        android:textColor="@color/white"
        />
    <RadioButton
        android:id="@+id/rd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rd1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="22dp"
        android:textColor="@color/white"
        />
    <RadioButton
        android:id="@+id/rd3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rd2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="22dp"
        android:textColor="@color/white"
        />  
    <RadioButton
    android:id="@+id/rd4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/rd3"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="22dp"
        android:textColor="@color/white"

    />
    </RadioGroup>
    
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/sbmt_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/submit"
            app:backgroundTint="#2979FF" />
    <DigitalClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#76FF03"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginEnd="18dp" />

<TextView
    android:id="@+id/fdbk"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/sbmt_btn"
    android:layout_marginTop="12dp"
    android:textColor="@color/white"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#595354"
    android:textSize="18sp"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:textStyle="italic"
    />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/next"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="300dp"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:backgroundTint="#00E676"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fdbk"
        app:layout_constraintVertical_bias="0" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/prev"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="300dp"
        android:text="Prev"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:backgroundTint="#00E676"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fdbk"
        app:layout_constraintVertical_bias="0" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fnsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"
        android:text="Finish"
        android:textColor="@color/black"
        app:backgroundTint="#F50057"
        android:textSize="18sp"
      />


</androidx.constraintlayout.widget.ConstraintLayout>